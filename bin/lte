#!/usr/bin/env ruby

require 'gtk3'
require 'pp'

require 'lte'

## read command-line arguments (flags)

config = LTE::Config.new

flags = [
	LTE::Flag.new('',   '--config-dir', 'set config directory (default is $XDG_CONFIG_HOME/lte or ~/.config/lte)', lambda { |dir| config.config_dir = dir} , true, "CONFIG_DIR"),
	LTE::Flag.new('-v', '--verbose',    'show more output',                                                        lambda { config.verbose = true } ),
	LTE::Flag.new('-h', '--help',       'show help',                                                               lambda { puts LTE::Flag.gen_help_message(flags); exit 0 } )
]

LTE::Flag.process_all(ARGV, flags)

## start game

class MainWindow
	def initialize(config)
		@config = config

		Gtk.init

		@builder = Gtk::Builder::new
		@builder.add_from_file(@config.resource_dir + '/lte.glade')
		@builder.connect_signals { |handler| method(handler) }

		@builder.get_object('main_window').show

		Gtk.main
	end

	def start_game
		update_player_stats

		@builder.get_object('content_label').text = "Hello world!"
	end

	def update_player_stats
		@builder.get_object('battle_stats_health_label').text = 'HP ' + @player.max_health.to_s + ' / ' + @player.health.to_s

		health_bar = @builder.get_object 'battle_stats_health_levelbar'
		health_bar.max_value = @player.max_health
		health_bar.value     = @player.health

		@builder.get_object('battle_stats_manna_label').text = 'MP ' + @player.max_manna.to_s + ' / ' + @player.manna.to_s

		manna_bar = @builder.get_object 'battle_stats_manna_levelbar'
		manna_bar.max_value = @player.max_manna
		manna_bar.value     = @player.manna

		@builder.get_object('battle_stats_armor_value').text = @player.armor.to_s

		@builder.get_object('battle_stats_damage_value').text = @player.armor.to_s
	end

	# generic callbacks
	
	def gtk_main_quit
		Gtk.main_quit
	end

	def gtk_widget_show(widget, event)
		widget.hide
	end

	def gtk_widget_hide(widget, event)
		widget.hide
	end

	# specific callbacks
	
	## menu items
	
	def on_game_new_menuitem_activate
		@builder.get_object('player_new_dialog').show
	end

	def on_game_open_menuitem_activate
		@builder.get_object('player_open_filechooser_dialog').show
	end

	def on_game_save_menuitem_activate
		if @player
			if @player_file
				@player.save_to_file(@player_file)
			else
				@builder.get_object('player_save_filechooser_dialog').show
			end
		else
			@builder.get_object('no_player_dialog').show
		end
	end

	def on_game_save_as_menuitem_activate
		if @player
			@builder.get_object('player_save_filechooser_dialog').show
		else
			@builder.get_object('no_player_dialog').show
		end
	end

	def on_game_inspect_menuitem_activate
		@builder.get_object('player_inspect_label').text = @player.pretty_inspect
		@builder.get_object('player_inspect_dialog').show
	end

	def on_content_load_menuitem_activate
		@builder.get_object('content_load_filechooser_dialog').show
	end

	def on_help_about_menuitem_activate
		@builder.get_object('about_dialog').show
	end

	## player new dialog TODO
	
	def on_player_new_dialog_show(widget)
	end

	def on_player_new_dialog_response(dialog, response)
		if response == Gtk::ResponseType::CANCEL or response == Gtk::ResponseType::ACCEPT
			dialog.hide
		end

		if response == Gtk::ResponseType::ACCEPT
			# do magic with selected content ...
			start_game
		end
	end

	## player open filechooser
	
	def on_player_open_filechooser_dialog_show(widget)
		if @player_file
			widget.filename = File.dirname(@player_file)
		else
			widget.current_folder = @config.config_dir + '/saves/'
		end
	end

	def on_player_open_filechooser_dialog_response(dialog, response)
		if response == Gtk::ResponseType::CANCEL or response == Gtk::ResponseType::ACCEPT
			dialog.hide
		end

		if response == Gtk::ResponseType::ACCEPT
			@player = Player.load_from_file(@player_file = dialog.filename)
			start_game
		end
	end

	## player save filechooser

	def on_player_save_filechooser_dialog_show(widget)
		if @player_file
			widget.filename = File.dirname(@player_file)
		else
			widget.current_folder = @config.config_dir + '/players/'
			widget.current_name   = "#{@player.name.downcase.gsub(' ', '_')}.dat"
		end
	end

	def on_player_save_filechooser_dialog_response(dialog, response)
		if response == Gtk::ResponseType::CANCEL or response == Gtk::ResponseType::ACCEPT
			dialog.hide
		end

		if response == Gtk::ResponseType::ACCEPT
			@player.save_to_file(@player_file = dialog.filename)
		end
	end

	## player inspect dialog
	
	def on_player_inspect_dialog_response(dialog, response_event)
		if response_event == Gtk::ResponseType::OK
			dialog.hide
		end
	end

	## no player dialog
	
	def on_no_player_dialog_response(dialog, response_event)
		if response_event == Gtk::ResponseType::OK
			dialog.hide
		end
	end

	## content load filechooser
	
	def on_content_load_filechooser_dialog_show(widget)
		widget.current_folder = @config.config_dir
	end

	def on_content_load_filechooser_dialog_response(dialog, response)
		if response == Gtk::ResponseType::CANCEL
			dialog.hide
		elsif response == Gtk::ResponseType::ACCEPT
			dialog.hide
			load dialog.filename
		end
	end
end

window = MainWindow.new(config)
